<h2 class="ui center aligned header teal">Pyaare Gandoos Chatroom</h2>
<h2 class="ui center teal aligned small icon header">
  <i class="circular teal power on icon"></i>
  Create an account
</h2>

  <div class="ui three column grid container">
    <div class="six wide column">
      <% if @user.errors.any? %>
      <h3>Errors!! Try Again</h3>
       <ul>
         <% @user.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
         <% end %>
      </ul>
      <% end %>

    </div>
    <div class="ui placeholder inverted teal segment raised">
      <div class="column">
          <div class="ui grid">
            <div class="one wide column"></div>
            <div class="thirteen wide column">
            <%= form_for(@user, html: {class:"ui form", role: "form"}, url: signup_path) do |f| %>
              <div class="field">
                <%= f.label :username, "Username" %>
                <div class="ui left icon input">
                  <%= f.text_field :username, placeholder: "Username" %>
                  <i class="user icon teal"></i>
                </div>
              </div>
              <div class="field">
                <%= f.label :email, "Email" %>
                <div class="ui left icon input">
                  <%= f.email_field :email, placeholder: "Email" %>
                  <i class="mail icon teal"></i>
                </div>
              </div>
              <div class="field">
                <%= f.label :password, "Password" %>
                <div class="ui left icon input">
                  <%= f.password_field :password, placeholder: "Password"%>
                  <i class="lock icon teal"></i>
                </div>
              </div>
              <%= f.button "Signup", class: "ui inverted submit button"%>
              <% end %>
            </div>
            <div class="one wide column"></div>
          </div>
          </div>
        </div>
    <div class="column"></div>
 </div>
